<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mikesavastano.howlongtil.HolidayList">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/year_lin_layout"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year_text"
            android:id="@+id/yearTextView"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_weight="1" />

        <EditText
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:id="@+id/yearEditText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff080607"
            android:inputType="number|none"
            android:maxLength="4"
            android:digits="0123456789"
            android:gravity="center" />

        <!--android:onClick="saveEvent" -->


    </LinearLayout>



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listHolidayEvents"
        android:padding="4dp"
        android:background="@drawable/textlines"
        android:layout_below="@+id/year_lin_layout" />
</RelativeLayout>
