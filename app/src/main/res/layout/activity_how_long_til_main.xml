<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HowLongTIlMainActivity"
    android:background="@drawable/textlines"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linLayoutMainScreen"
        android:focusableInTouchMode="false"
        >

        <TextView
            android:textSize="45sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pickDateText"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/pick_date_text"
            android:textColor="#fff7fbf9"
            android:layout_weight="2"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:calendarViewShown="false"
                android:background="#fff3f2ee"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >
            <Button
                android:text="@string/how_long_button_text"
                android:textColor="#fff3f2ee"
                android:id="@+id/howLongButton"
                android:layout_centerVertical="true"
                android:onClick="howLongTil"
                android:background="#ff080607"
                android:padding="6dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="45dp"/>
        </RelativeLayout>


        <fragment
            android:id="@+id/adFragment"
            android:name="com.mikesavastano.howlongtil.HowLongTIlMainActivity$AdFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
        />

    </LinearLayout>

</RelativeLayout>
